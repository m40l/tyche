{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "ES2020",
        "strict": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "pretty": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "allowJs": false,
        "noFallthroughCasesInSwitch": true,
        "declaration": false,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "lib": [
            "ES2020",
        ],
    },
    "include": ["./src/**/*.ts", "./types/*.ts"]
}